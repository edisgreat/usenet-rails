<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Created</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Query</th>
      <th>Author name</th>
      <!-- <th>Status</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.created_at.to_formatted_s(:short) %></td>
        <td><%= request.start_date %></td>
        <td><%= request.end_date %></td>
        <td><%= request.query %></td>
        <td><%= request.author_name %></td>
        <!-- <td><%= request.status_s %></td> -->
        <td><%= link_to 'Show', request %></td>
        <!-- <td><%= link_to 'Destroy', request, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

