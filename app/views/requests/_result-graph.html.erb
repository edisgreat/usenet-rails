<canvas id="chart" width="1200" height="500"></canvas>

<script>
  function newDate(days) {
    return moment().add(days, 'd').toDate();
  }

  function newDateString(days) {
    return moment().add(days, 'd').format('MM/DD/YYYY');
  }

  var config = {
    type: 'line',
    data: {
      datasets: [{
        label: 'Approx Posts',
        backgroundColor: '#000000',
        borderColor: '#ff0000',
        fill: false,
        pointRadius: 7,
        pointHoverRadius: 10,
        lineTension: 0,
        data: [{
          x: newDateString(0),
          y: 1
        }, {
          x: newDateString(2),
          y: 2
        }, {
          x: newDateString(4),
          y: 15
        }, {
          x: newDateString(5),
          y: 2
        },{
          x: newDateString(6),
          y: 1
        },{
          x: newDateString(7),
          y: 2
        }, {
          x: newDateString(8),
          y: 15
        }, {
          x: newDateString(9),
          y: 2
        }, {
          x: newDateString(30),
          y: 2
        }, {
          x: newDateString(365),
          y: 2
        }],
      }]
    },
    options: {
      responsive: true,
      title: {
        display: true,
        text: 'Richard Stallman'
      },
      scales: {
        xAxes: [{
          type: 'time',
          display: true,
          scaleLabel: {
            display: true,
            labelString: 'Date'
          },
          time: {
            unit: 'month',
            displayFormats: {
              month: 'M/D/YY'
            }
          },
          ticks: {
            major: {
              fontStyle: 'bold',
              fontColor: '#FF0000'
            }
          }
        }],
        yAxes: [{
          display: true,
          beginAtZero: true,
          scaleLabel: {
            display: true,
            labelString: 'Approx Posts per Day'
          },
          ticks: {
            suggestedMin: 0,
            suggestedMax: 20
          }
        }]
      }
    }
  };

  window.onload = function() {
    var ctx = document.getElementById('chart').getContext('2d');
    window.myLine = new Chart(ctx, config);
  };
</script>