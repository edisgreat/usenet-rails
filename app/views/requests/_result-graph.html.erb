

<canvas id="chart" width="1200" height="500"></canvas>

<script>
  function newDate(days) {
    return moment().add(days, 'd').toDate();
  }

  function newDateString(days) {
    return moment().add(days, 'd').format('MM/YYYY');
  }

  var config = {
    type: 'line',
    data: {
      datasets: [{
        label: 'Approx Posts',
        backgroundColor: '#000000',
        borderColor: '#ff0000',
        fill: false,
        pointRadius: 4,
        pointHoverRadius: 10,
        lineTension: 0,
        data: [

          <%
            @request.relevant_results.each do |result|
              
              %> {
                x: '<%= result.start_date.to_s %>',
                y: <%= result.amount_per_day %>
              }, <%

            end 
          %>

        ],
      }]
    },
    options: {
      responsive: true,
      hover: {
        intersect: false,
      },
      tooltips: {
        intersect: false,

      },
      title: {
        display: true,
        text: '<%= @request.query %>'
      },
      scales: {
        xAxes: [{
          type: 'time',
          display: true,
          scaleLabel: {
            display: true,
            labelString: 'Date'
          },
          time: {
            unit: 'month',
            displayFormats: {
              month: 'M/D/YY'
            }
          },
          ticks: {
            major: {
              fontStyle: 'bold',
              fontColor: '#FF0000'
            }
          }
        }],
        yAxes: [{
          display: true,
          beginAtZero: true,
          scaleLabel: {
            display: true,
            labelString: 'Approx Posts per Day'
          },
          ticks: {
            suggestedMin: 0,
            suggestedMax: 20
          }
        }]
      }
    }
  };

  window.onload = function() {
    var ctx = document.getElementById('chart').getContext('2d');
    window.myLine = new Chart(ctx, config);
  };
</script>